{
    "manifest_version": 2,
    "name": "Claudex",
    "version": "1.0",
    "description": "Firefox extension to export chats with Anthropic's Claude in Markdown",
    "permissions": [
        "tabs",
        "activeTab",
        "https://claude.ai/*"
    ],
    "browser_action": {
      "default_title": "Export Conversation",
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "icons": {
      "48": "icons/claudex.png",
      "96": "icons/claudex.png"
    }
  }